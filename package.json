{
  "name": "connorjs-github-io",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "npm run build -w presentations",
    "ci-build": "run-p -l build eslint format",
    "eslint": "eslint -f pretty .",
    "eslint:fix": "npm run eslint -- --fix",
    "format": "prettier --check '**/*.{css,html,js,json,md}'",
    "format:fix": "npm run format -- -w",
    "prepare": "is-ci || husky husky",
    "start": "npm start -w presentations"
  },
  "devDependencies": {
    "@types/reveal.js": "^5.0.3",
    "dotenv": "^16.4.5",
    "eslint": "~8.57.0",
    "eslint-config-connorjs": "~1.0.0-alpha.7",
    "eslint-formatter-pretty": "^6.0.1",
    "highlight.js": "11.9.0",
    "husky": "^9.0.11",
    "is-ci": "^3.0.1",
    "lint-staged": "^15.2.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.5",
    "reveal.js": "5.1.0",
    "vite": "^5.2.11"
  },
  "workspaces": [
    "packages/*"
  ]
}
